package body GPRname.Unit is

   ------------
   -- Create --
   ------------

   function Create
     (Name            : GPR2.Name_Type;
      Kind            : Unit_Kind;
      Index_In_Source : Natural) return Object is
   begin
      return Object'(Name            => +String (Name),
                     Kind            => Kind,
                     Index_In_Source => Index_In_Source);
   end Create;

end GPRname.Unit;
