
library project xyz is

   Version := "1.2.0";

   for Languages use ("Ada");
   for Source_Dirs use ("src");

   for Library_Name use "xyz";
   for Library_Kind use "relocatable";
   for Library_Dir use "../build2/lib/xyz/" & Project'Library_Kind;
   for Object_Dir use "../build2/obj/xyz/" & Project'Library_Kind;
   for Library_Version use "lib" & Project'Library_Name & "." & Version & ".so";

end xyz;
