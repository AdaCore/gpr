library project Inst is

   type S_Target_type is ("Windows_NT", "UNIX");
   S_Target : S_Target_Type := external ("OS", "UNIX");

   for Source_Dirs use ("src");
   for Object_Dir use "obj";

   for Library_Dir use "lib";
   for Library_Name use "nex";
   for Library_Kind use "relocatable";
   for Library_Interface use ("Pack", "Pack.Impl");

   package Naming is
      case S_Target is
         when "Windows_NT" =>
            null;
         when others =>
            for Body ("pack.impl") use "pack-impl__unix.adb";
      end case;
   end Naming;

end Inst;
