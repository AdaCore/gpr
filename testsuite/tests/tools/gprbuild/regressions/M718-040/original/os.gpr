project OS is

   for Main use ("proc_main.adb");
   for Object_Dir use ".";
   for Exec_Dir use ".";
   for Languages use ("Ada");

   package gnatls is
      for Switches use ("-a","-v");
   end gnatls;

   package Compiler is
      for Default_Switches ("ada") use ("-g", "-gnato", "-gnatwa", "-gnatQ", "-gnat95");
   end Compiler;

   package Naming is
      for Casing              use "lowercase";
      for Dot_Replacement     use "-";
      for Spec_Suffix ("Ada") use ".ads";
      for Body_Suffix ("Ada") use ".adb";
      for Spec ("proc_main") use "proc_main.ads";
      for Body ("proc_main") use "proc_main.adb";
      for Spec ("packA") use "packA.ads";
      for Body ("packA") use "packA.adb";
      for Spec ("packA.packB") use "packA-packB.ads";
      for Body ("packA.packB") use "packA-packB.adb";
      for Spec ("packC") use "packC.ads";
      for Body ("packC") use "packC.adb";
      for Spec ("packD") use "packD.ads";
      for Body ("packD") use "packD.adb";
      for Body ("packA.packB.sep_1") use "packA-packB__sep1.adb";
   end Naming;

   for Source_Dirs use ("src");

end OS;
