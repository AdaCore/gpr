      for Specification ("U") use "u.adb" at 1;
      for Body ("U") use "u.adb" at 2;
      for Body ("U.V") use "sep.adb" at 1;
      for Body ("U.W") use "sep.adb" at 2;
   end Naming;
end Multi;
