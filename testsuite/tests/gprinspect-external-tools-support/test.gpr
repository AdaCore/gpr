project Test is
   package Check is
      for Default_Switches ("Ada") use ("--rules", "my_rules.txt");
      for Switches ("test.adb") use ("");
   end Check;

   package Codepeer is
      for File_Patterns use ("*.ad?");
   end Codepeer;

   package Prove is
      for Proof_Dir use "proof_dir";
      for Proof_Switches ("file.adb") use ("--timeout=10");
      for Switches use ("--report=all");
   end Prove;
end Test;