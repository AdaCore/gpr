with "gpr2tools-common";

project GPR2tools.GPRLs extends "gpr2tools.gpr" is

   for Source_Dirs use ("../src/gprls");
   for Main use ("gprls-main.adb");
   for Object_Dir use GPR2tools.Base_Object_Dir & "/gprls";
   for Exec_Dir use GPR2tools.Base_Exec_Dir;

   package Builder extends GPR2_Shared.Builder is
      for Executable ("gprls-main.adb") use "gprls2";
   end Builder;

end GPR2tools.GPRLs;
