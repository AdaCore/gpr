with Ada.Text_IO;

with GNAT.OS_Lib;

package body GPRtools.Sigint is

   -------------
   -- Handler --
   -------------

   procedure Handler is
   begin
      Ada.Text_IO.Put_Line ("*** Interrupted ***");
      GNAT.OS_Lib.OS_Exit (2);
   end Handler;

end GPRtools.Sigint;
